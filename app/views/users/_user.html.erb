<tr>
  <td><%= gravatar_for user, size: 50, class: 'gravatar' %></td>
  <td><%= user.username %></td>
  <td><%= user.admin? ? 'Admin' : 'Member' %></td>
  <td><%= user.codeforces_handle %></td>
  <td><%= user.topcoder_handle %></td>
  <td><%= user.uva_handle %></td>
  <td><%= link_to 'Details', user %></td>
  <td><%= (link_to 'edit', edit_user_path(user)) if can_edit_user user %></td>
  <td><%= (link_to 'delete', user_path(user), method: :delete, data: {confirm: 'You sure?'}) if can_delete_user user %></td>
</tr>