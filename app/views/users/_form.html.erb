<%= form_for(@user) do |form| %>
    <%= render 'shared/error_messages' %>

    <div class="form-inline">
      <%= form.label :username, class: 'form_label text-right' %>
      <%= form.text_field :username, class: 'form-control form_value' %>
    </div>

    <div class="form-inline">
      <%= form.label :email, class: 'form_label text-right' %>
      <%= form.email_field :email, class: 'form-control form_value' %>
    </div>

    <div class="form-inline">
      <%= form.label :firstname, class: 'form_label text-right' %>
      <%= form.text_field :firstname, class: 'form-control form_value' %>
    </div>

    <div class="form-inline">
      <%= form.label :lastname, class: 'form_label text-right' %>
      <%= form.text_field :lastname, class: 'form-control form_value' %>
    </div>

    <div class="form-inline">
      <%= form.label :password, class: 'form_label text-right' %>
      <%= form.password_field :password, class: 'form-control form_value' %>
    </div>

    <div class="form-inline">
      <%= form.label :password_confirmation, 'Confirmation', class: 'form_label text-right' %>
      <%= form.password_field :password_confirmation, class: 'form-control form_value' %>
    </div>

    <%= form.submit yield(:button_text), class: 'btn btn-success form_submit' %>
<% end %>