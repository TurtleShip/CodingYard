<h1 class="title">Log in</h1>

<%= form_for(:session, url: login_path, html: {class: 'form-horizontal text-center'}) do |form| %>

    <div class="form-group">
      <%= form.label :username, class: 'control-label col-sm-offset-3 col-sm-2 col-xs-2' %>
      <div class="col-sm-offset-0 col-sm-3 col-xs-offset-1 col-xs-8">
        <%= form.text_field :username, class: 'form-control ' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :password, class: 'control-label col-sm-offset-3 col-sm-2 col-xs-2' %>
      <div class="col-sm-offset-0 col-sm-3 col-xs-offset-1 col-xs-8">
        <%= form.password_field :password, class: 'form-control' %>
      </div>
    </div>
    <%= link_to '(forgot password)', new_password_reset_path %> <br/>
    <%= link_to '(resend activation link)', new_account_activation_path %>
    <br/>

    <%= form.submit 'Log in', class: 'btn btn-success margin-top-sm' %>

    <%= form.label :remember_me, class: 'checkbox inline' do %>
        <%= form.check_box :remember_me %>
        Remember me on this computer
    <% end %>
<% end %>
