<h1 id="reset_password_header">Reset password</h1>

<div class="text-center">
  <%= form_for(@user, url: password_reset_path(params[:id])) do |form| %>
      <%= render 'shared/error_messages' %>

      <%= hidden_field_tag :email, @user.email %>
      <div class="form-inline">
        <%= form.label :password, class: 'form_label text-right' %>
        <%= form.password_field :password, class: 'form-control form_value' %>
      </div>
      <div class="form-inline">
        <%= form.label :password_confirmation, 'Confirmation', class: 'form_label text-right' %>
        <%= form.password_field :password_confirmation, class: 'form-control form_value' %>
      </div>

      <%= form.submit 'Update password', class: 'btn btn-success', id: 'update_password_button' %>
  <% end %>
</div>