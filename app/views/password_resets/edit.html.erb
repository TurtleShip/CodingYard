<h1 class="title">Reset password</h1>


<%= form_for(@user, url: password_reset_path(params[:id]), html: {class: 'form-horizontal'}) do |form| %>
    <%= render 'shared/error_messages', object: form.object %>

    <%= hidden_field_tag :email, @user.email %>
    <div class="form-group">
      <%= form.label :password, class: 'control-label col-xs-3 col-sm-offset-2 col-sm-2' %>
      <div class="col-xs-9 col-sm-5">
        <%= form.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, 'Confirmation', class: 'control-label col-xs-3 col-sm-offset-2 col-sm-2' %>
      <div class="col-xs-9 col-sm-5">
        <%= form.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group text-center">
      <%= form.submit 'Update password', class: 'btn btn-success' %>
    </div>
<% end %>
