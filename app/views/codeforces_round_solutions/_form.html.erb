<%= form_for(@solution) do |form| %>
    <%= render 'shared/error_messages', object: form.object %>

    <div class="text-center">

      <div class="form-inline">
        <div class="panel panel-success">

          <div class="panel-heading solution_sub_header">Required</div>

          <div class="panel-body">
            <div class="form-group">
              <%= form.label :round_number, 'Round number :', class: 'solution_form_label' %>
              <%= form.number_field :round_number, required: true, class: 'form-control solution_form_value solution_number_input' %>
            </div>

            <div class="form-group solution_add_margin">
              <%= form.label :division_number, 'Division number :', class: 'solution_form_label' %>
              <%= form.select(:division_number, {'1' => 1, '2' => 2}, {required: true}, class: 'form-control solution_form_value') %>
            </div>

            <div class="form-group solution_add_margin">
              <%= form.label :level, 'Level :', class: 'solution_form_label' %>
              <%= form.select(:level, {A: 'A', B: 'B', C: 'C', D: 'D', E: 'E'}, {required: true},
                              class: 'form-control solution_form_value') %>
            </div>

            <div class="form-group solution_add_margin">
              <%= form.label :language, 'Language :', class: 'solution_form_label' %>
              <%= select_tag(:language,
                             options_from_collection_for_select(@languages, :name, :name),
                             required: true, class: 'form-control solution_form_value') %>
            </div>

            <% unless @is_edit %>
                <div class="form-group">
                  <%= form.file_field :attachment, required: true, class: 'font_architects_daughter' %>
                </div>
            <% end %>
          </div>
        </div>
      </div>


      <div class="form-inline">
        <div class="panel panel-warning">

          <div class="panel-heading solution_sub_header">Optional</div>

          <div class="panel-body">
            <div class="form-group">
              <%= form.label :link, 'Link to the problem : ', class: 'solution_form_label' %>
              <%= url_field(:link, :findme, class: 'form-control') %>
            </div>
          </div>

        </div>
      </div>

      <%= form.submit yield(:button_text), class: 'btn btn-success' %>
    </div>
<% end %>
