<h1 class="solution_header">Codeforces Round Solutions</h1>

<%= will_paginate %>

<%= form_tag codeforces_round_solutions_path, method: :get, class: 'form-inline text-center' do %>
    <div class="form-group">
      <%= label_tag :round_number, 'Round:', class: 'solution_search_label' %>&nbsp;
      <%= number_field_tag :round_number, nil, min: 1, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :division_number, 'Division:', class: 'solution_search_label' %>&nbsp;
      <%= select_tag :division_number, options_for_select([['N/A', nil], [1, 1], [2, 2]]), class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :level, 'Level:', class: 'solution_search_label' %>&nbsp;
      <%= select_tag :level,
                     options_for_select([['N/A', nil], %w(A A), %w(B B), %w(C C), %w(D D), %w(E E)]),
                     class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :author, 'Author: ', class: 'solution_search_label' %>&nbsp;
      <%= search_field_tag :author, nil, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :Language, 'Language: ', class: 'solution_search_label' %>&nbsp;
      <%= select_tag(:language, options_for_select([['N/A', nil]]) +
                                      options_from_collection_for_select(@languages, :name, :name),
                     class: 'form-control') %>
    </div>

    <div class="form-group">
      <%= submit_tag :search!, name: nil, class: 'btn btn-success' %>
    </div>
<% end %>

<div id="cf_index_warning">
<ul>
  <% @warnings.each do |warning| %>
      <li><%= warning %></li>
  <% end %>
</ul>
</div>

<table class="table table-striped">
  <thead>
  <tr class="solution_index_header">
    <th>Round</th>
    <th>Division</th>
    <th>Level</th>
    <th>Author</th>
    <th>Language</th>
    <th>Likes</th>
    <th>Dislikes</th>
    <th>Upload time</th>
    <th>Show</th>
    <th>Download</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>
  </thead>
  <tbody>
  <%= render @codeforces_round_solutions %>
  </tbody>


</table>

<%= will_paginate %>
